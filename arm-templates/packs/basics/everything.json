{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "guidSeed": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "This value is used to generate unique identifiers for the resources that need them, don't modify this!"
      }
    },
    "repoName": {
      "type": "string",
      "defaultValue": "InfoSecInnovations/Sentinel-Service-Offering",
      "metadata": {
        "description": "GitHub repository containing the ARM templates Organization/Repo-Name."
      }
    },
    "repoBranch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "Git branch containing the ARM templates."
      }
    }
  },
  "variables": {
    "isiSentinel": "[concat('https://raw.githubusercontent.com/', parameters('repoName'), '/', parameters('repoBranch'), '/')]",
    "requirementsName": "[concat('basicsRequirements', '-', parameters('location'))]",
    "workbooksName": "[concat('basicsWorkbooks', '-', parameters('location'))]",
    "rulesName": "[concat('basicsRules', '-', parameters('location'))]"
  },
  "resources": [
    {
      "name": "[variables('requirementsName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/basics/requirements.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "repoName": {
            "value": "[parameters('repoName')]"
          },
          "repoBranch": {
            "value": "[parameters('repoBranch')]"
          }
        }
      }
    },
    {
      "name": "[variables('workbooksName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/basics/workbooks.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "guidSeed": {
            "value": "[parameters('guidSeed')]"
          },
          "repoName": {
            "value": "[parameters('repoName')]"
          },
          "repoBranch": {
            "value": "[parameters('repoBranch')]"
          }
        }
      }
    },
    {
      "name": "[variables('rulesName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/basics/rules.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "repoName": {
            "value": "[parameters('repoName')]"
          },
          "repoBranch": {
            "value": "[parameters('repoBranch')]"
          }
        }
      }
    }
  ]
}
