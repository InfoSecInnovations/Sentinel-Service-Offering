{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "isiSentinel": "https://raw.githubusercontent.com/InfoSecInnovations/Sentinel-Service-Offering/main/",
    "azureActivityDataConnectorName": "[concat('azureActivityDataConnector', '-', parameters('location'))]"
  },
  "resources": [
    {
      "name": "[variables('azureActivityDataConnectorName')]",
      "type": "Microsoft.Resources/deployments",
      "location": "[parameters('location')]",
      "apiVersion": "2022-09-01",
      "subscriptionId": "[subscription().subscriptionId]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/azure-activity/data-connectors/enable-azure-activity-logs.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "resourceGroupName": {
            "value": "[resourceGroup().name]"
          }
        }
      }
    }
  ]
}
