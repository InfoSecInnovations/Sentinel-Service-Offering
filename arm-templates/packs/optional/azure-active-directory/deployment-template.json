{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "guidSeed": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "This value is used to generate unique identifiers for the resources that need them, don't modify this!"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "workspaceName": {
      "type": "string"
    },
    "permissionLevel": {
      "type": "string",
      "allowedValues": [
        "ResourceGroup",
        "Subscription",
        "Tenant"
      ],
      "defaultValue": "Subscription",
      "metadata": {
        "description": "Please select the highest level item you have Contributor access to."
      }
    }
  },
  "variables": {
    "artifactsAzureSentinel2Go": "https://raw.githubusercontent.com/InfoSecInnovations/Microsoft-Sentinel2Go/master/",
    "isiSentinel": "https://raw.githubusercontent.com/InfoSecInnovations/Sentinel-Service-Offering/main/",
    "azureSentinel": "https://raw.githubusercontent.com/Azure/Azure-Sentinel/master/",
    "AADContentPackageName": "[concat('AADContentPackage', '-', parameters('location'))]",
    "enableAADDataConnectorName": "[concat('enableAADDataConnector', '-', parameters('location'))]",
    "enableUEBAName": "[concat('enableUEBA', '-', parameters('location'))]",
    "AADAuditActivitySignInWorkbookName": "[concat('AADAuditActivitySignInWorkbook', '-', parameters('location'))]",
    "UEBAWorkbookName": "[concat('UEBAWorkbook', '-', parameters('location'))]",
    "accountCreatedDelShortTimeframeName": "[concat('accountCreatedDelShortTimeframe', '-', parameters('location'))]",
    "adminPromoAppPermGrantName": "[concat('adminPromoAppPermGrant', '-', parameters('location'))]",
    "anomalousSigninLocationAccountAppName": "[concat('anomalousSigninLocationAccountApp', '-', parameters('location'))]",
    "signInDisabledAccountsName": "[concat('signInDisabledAccounts', '-', parameters('location'))]",
    "authenticationMethodsChangeForPrivilegedAccountName": "[concat('authenticationMethodsChangeForPrivilegedAccount', '-', parameters('location'))]",
    "azureAdRoleManagementPermissionGrantName": "[concat('azureAdRoleManagementPermissionGrant', '-', parameters('location'))]",
    "azurePortalSignInFromAnotherTenantName": "[concat('azurePortalSignInFromAnotherTenant', '-', parameters('location'))]",
    "bruteForceAttackAgainstACloudPcName": "[concat('bruteForceAttackAgainstACloudPc', '-', parameters('location'))]",
    "bruteForceAttackAgainstAzurePortalName": "[concat('bruteForceAttackAgainstAzurePortal', '-', parameters('location'))]"
  },
  "resources": [
    {
      "name": "[variables('AADContentPackageName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('azureSentinel'), 'Solutions/Microsoft%20Entra%20ID/Package/mainTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "workspace-location": {
            "value": "[parameters('location')]"
          },
          "workspace": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('enableAADDataConnectorName')]",
      "condition": "[equals(parameters('permissionLevel'), 'Tenant')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "scope": "/",
      "location": "[parameters('location')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/data-connectors/azure-active-directory.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "resourceGroupName": {
            "value": "[resourceGroup().name]"
          },
          "subscriptionId": {
            "value": "[subscription().subscriptionId]"
          }
        }
      }
    },
    {
      "name": "[variables('enableUEBAName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/onboarding/enable-ueba.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('AADAuditActivitySignInWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/workbooks/azure-ad-audit-activity-and-sign-in-logs.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'azure AD audit, activity and sign-in logs workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('UEBAWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/workbooks/user-and-entity-behavior-analytics.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'user and entity behaviour analytics workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('accountCreatedDelShortTimeframeName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/rules/account-created-and-deleted-in-short-timeframe.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('adminPromoAppPermGrantName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/rules/admin-promotion-after-role-management-application-permission-grant.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('anomalousSigninLocationAccountAppName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/rules/anomalous-signin-location-by-user-account-and-authenticating-application.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('signInDisabledAccountsName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/rules/attempts-to-sign-in-to-disabled-accounts.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('authenticationMethodsChangeForPrivilegedAccountName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/rules/authentication-methods-change-for-privileged-account.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('azureAdRoleManagementPermissionGrantName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/rules/azure-ad-role-management-permission-grant.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('azurePortalSignInFromAnotherTenantName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/rules/azure-portal-sign-in-from-another-tenant.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('bruteForceAttackAgainstACloudPcName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/rules/brute-force-attack-against-a-cloud-pc.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('bruteForceAttackAgainstAzurePortalName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/optional/azure-active-directory/rules/brute-force-attack-against-azure-portal.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    }
  ]
}