{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "exchangeState": {
      "type": "string",
      "defaultValue": "test"
    },
    "sharepointState": {
      "type": "string",
      "defaultValue": "test"
    },
    "teamsState": {
      "type": "string",
      "defaultValue": "test"
    },
    "workspaceName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "guidSeed": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "This value is used to generate unique identifiers for the resources that need them, don't modify this!"
      }
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[subscription().tenantId]"
    }
  },
  "variables": {
    "artifactsAzureSentinel2Go": "https://raw.githubusercontent.com/InfoSecInnovations/Microsoft-Sentinel2Go/master/",
    "isiSentinel": "https://raw.githubusercontent.com/InfoSecInnovations/Sentinel-Service-Offering/main/"
  },
  "resources": [
    {
      "name": "enableOffice365",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('artifactsAzureSentinel2Go'), 'microsoft-sentinel/linkedtemplates/data-connectors/office365.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "exchangeState": {
            "value": "[parameters('exchangeState')]"
          },
          "sharePointState": {
            "value": "[parameters('sharePointState')]"
          },
          "teamsState": {
            "value": "[parameters('teamsState')]"
          },
          "tenantId": {
            "value": "[parameters('tenantID')]"
          }
        }
      }
    },
    {
      "name": "office365Workbook",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'workbooks/optional/office-365.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[reference('deployAzureSentinel').outputs.workspaceName_output.value]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'firewall workbook')]"
          },
          "displayName": {
            "value": "Windows Firewall"
          }
        }
      }
    }
  ]
}