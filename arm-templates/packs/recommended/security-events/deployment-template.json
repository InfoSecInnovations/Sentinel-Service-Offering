{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "workspaceName": {
      "type": "string"
    },
    "workspaceId": {
      "type": "string"
    },
    "permissionLevel": {
      "type": "string",
      "allowedValues": [
        "ResourceGroup",
        "Subscription",
        "Tenant"
      ],
      "defaultValue": "Subscription",
      "metadata": {
        "description": "Please select the highest level item you have Contributor access to."
      }
    },
    "securityCollectionTier": {
      "type": "string",
      "metadata": {
        "description": "Tier for gathering Windows Security Events."
      },
      "allowedValues": [
        "Minimum",
        "Common",
        "All"
      ],
      "defaultValue": "Common"
    },
    "arcServers": {
      "type": "array",
      "defaultValue": []
    },
    "guidSeed": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "This value is used to generate unique identifiers for the resources that need them, don't modify this!"
      }
    }
  },
  "variables": {
    "artifactsAzureSentinel2Go": "https://raw.githubusercontent.com/InfoSecInnovations/Microsoft-Sentinel2Go/master/",
    "isiSentinel": "https://raw.githubusercontent.com/InfoSecInnovations/Sentinel-Service-Offering/main/",
    "azureSentinel": "https://raw.githubusercontent.com/Azure/Azure-Sentinel/master/",
    "windowsSecurityEventsContentPackageName": "[concat('windowsSecurityEventsContentPackage', '-', parameters('location'))]",
    "attackerToolsThreatProtectionContentPackageName": "[concat('attackerToolsThreatProtectionContentPackage', '-', parameters('location'))]",
    "enableAMALogsName": "[concat('enableAMALogs', '-', parameters('location'))]",
    "associateArcServersName": "[concat('associateArcServers', '-', parameters('location'))]",
    "eventAnalyzerWorkbookName": "[concat('eventAnalyzerWorkbook', '-', parameters('location'))]",
    "anomalousRDPName": "[concat('anomalousRDPLoginDetections', '-', parameters('location'))]",
    "credentialDumpingToolsFileArtifactsName": "[concat('credentialDumpingToolsFileArtifacts', '-', parameters('location'))]",
    "credentialDumpingToolsServiceInstallationName": "[concat('credentialDumpingToolsServiceInstallation', '-', parameters('location'))]",
    "newExeDeployedViaDefaultDomainOrDefaultDomainControllerPoliciesName": "[concat('newExeDeployedViaDefaultDomainOrDefaultDomainControllerPolicies', '-', parameters('location'))]",
    "nonDomainControllerActiveDirectoryReplicationName": "[concat('nonDomainControllerActiveDirectoryReplication', '-', parameters('location'))]",
    "nrtBase64EnocdedWindowsProcessCommandLinesName": "[concat('nrtBase64EnocdedWindowsProcessCommandLines', '-', parameters('location'))]",
    "nrtProcessExecutedFromBinaryHiddenInBase64EncodedFileName": "[concat('nrtProcessExecutedFromBinaryHiddenInBase64EncodedFile', '-', parameters('location'))]",
    "nrtSecurityEventLogClearedName": "[concat('nrtSecurityEventLogCleared', '-', parameters('location'))]",
    "potentialFodhelperUacBypassName": "[concat('potentialFodhelperUacBypass', '-', parameters('location'))]",
    "potentialRenamedSdeleteUsageName": "[concat('potentialRenamedSdeleteUsage', '-', parameters('location'))]",
    "powershellEmpireCmdletsExecutedInCommandLineName": "[concat('powershellEmpireCmdletsExecutedInCommandLine', '-', parameters('location'))]",
    "processExecutionFrequencyAnomalyName": "[concat('processExecutionFrequencyAnomaly', '-', parameters('location'))]",
    "scheduledTaskHideName": "[concat('scheduledTaskHide', '-', parameters('location'))]",
    "sdeleteDeployedViaGpoAndRunRecursivelyName": "[concat('sdeleteDeployedViaGpoAndRunRecursively', '-', parameters('location'))]",
    "securityeventMultipleAuthenticationFailuresFollowedByASuccessName": "[concat('securityeventMultipleAuthenticationFailuresFollowedByASuccess', '-', parameters('location'))]"
  },
  "resources": [
    {
      "name": "[variables('windowsSecurityEventsContentPackageName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('azureSentinel'), 'Solutions/Windows%20Security%20Events/Package/mainTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "workspace-location": {
            "value": "[parameters('location')]"
          },
          "workspace": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('attackerToolsThreatProtectionContentPackageName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('azureSentinel'), 'Solutions/Attacker%20Tools%20Threat%20Protection%20Essentials/Package/mainTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "workspace-location": {
            "value": "[parameters('location')]"
          },
          "workspace": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('enableAMALogsName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/data-connectors/enable-ama-logs.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "workspaceId": {
            "value": "[parameters('workspaceId')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "loggingLevel": {
            "value": "[parameters('securityCollectionTier')]"
          }
        }
      }
    },
    {
      "name": "[variables('associateArcServersName')]",
      "condition": "[and(greater(length(parameters('arcServers')), 0), or(equals(parameters('permissionLevel'), 'Subscription'), equals(parameters('permissionLevel'), 'Tenant')))]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "dependsOn": [
        "[variables('enableAMALogsName')]"
      ],
      "subscriptionId": "[subscription().subscriptionId]",
      "location": "[parameters('location')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/onboarding/arc-server-associations.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "arcServers": {
            "value": "[parameters('arcServers')]"
          },
          "dataCollectionRuleId": {
            "value": "[reference(variables('enableAMALogsName'), '2022-09-01').outputs.dataCollectionRuleId.value]"
          },
          "dataCollectionRuleName": {
            "value": "[reference(variables('enableAMALogsName'), '2022-09-01').outputs.dataCollectionRuleName.value]"
          }
        }
      }
    },
    {
      "name": "[variables('eventAnalyzerWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/workbooks/event-analyzer.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'event analyzer workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('anomalousRDPName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/anomalous-rdp-login-detections.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('credentialDumpingToolsFileArtifactsName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/credential-dumping-tools-file-artifacts.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('credentialDumpingToolsServiceInstallationName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/credential-dumping-tools-service-installation.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('newExeDeployedViaDefaultDomainOrDefaultDomainControllerPoliciesName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/new-exe-deployed-via-default-domain-or-default-domain-controller-policies.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('nonDomainControllerActiveDirectoryReplicationName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/non-domain-controller-active-directory-replication.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('nrtBase64EnocdedWindowsProcessCommandLinesName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/nrt-base64-enocded-windows-process-command-lines.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('nrtProcessExecutedFromBinaryHiddenInBase64EncodedFileName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/nrt-process-executed-from-binary-hidden-in-base64-encoded-file.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('nrtSecurityEventLogClearedName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/nrt-security-event-log-cleared.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('potentialFodhelperUacBypassName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/potential-fodhelper-uac-bypass.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('potentialRenamedSdeleteUsageName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/potential-renamed-sdelete-usage.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('powershellEmpireCmdletsExecutedInCommandLineName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/powershell-empire-cmdlets-executed-in-command-line.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('processExecutionFrequencyAnomalyName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/process-execution-frequency-anomaly.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('scheduledTaskHideName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/scheduled-task-hide.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('sdeleteDeployedViaGpoAndRunRecursivelyName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/sdelete-deployed-via-gpo-and-run-recursively.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('securityeventMultipleAuthenticationFailuresFollowedByASuccessName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/security-events/rules/securityevent-multiple-authentication-failures-followed-by-a-success.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    }
  ]
}