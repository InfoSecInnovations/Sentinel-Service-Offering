{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "workspaceName": {
      "type": "string"
    },
    "guidSeed": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "This value is used to generate unique identifiers for the resources that need them, don't modify this!"
      }
    }
  },
  "variables": {
    "artifactsAzureSentinel2Go": "https://raw.githubusercontent.com/InfoSecInnovations/Microsoft-Sentinel2Go/master/",
    "isiSentinel": "https://raw.githubusercontent.com/InfoSecInnovations/Sentinel-Service-Offering/main/",
    "azureSentinel": "https://raw.githubusercontent.com/Azure/Azure-Sentinel/master/",
    "socHandbookContentPackageName": "[concat('socHandbookContentPackage', '-', parameters('location'))]",
    "apacheLog4jVulnDetectionPackageName": "[concat('apacheLog4jVulnDetectionPackage', '-', parameters('location'))]",
    "securityThreatEssentialPackageName": "[concat('securityThreatEssentialPackage', '-', parameters('location'))]",
    "analyticsEfficiencyWorkbookName": "[concat('analyticsEfficiencyWorkbook', '-', parameters('location'))]",
    "anomaliesVisualizationWorkbookName": "[concat('anomaliesVisualizationWorkbook', '-', parameters('location'))]",
    "archivingBasicLogsRetentionWorkbookName": "[concat('archivingBasicLogsRetentionWorkbook', '-', parameters('location'))]",
    "incidentOverviewWorkbookName": "[concat('incidentOverviewWorkbook', '-', parameters('location'))]",
    "microsoftSentinelCostWorkbookName": "[concat('microsoftSentinelCostWorkbook', '-', parameters('location'))]",
    "securityAlertsWorkbookName": "[concat('securityAlertsWorkbook', '-', parameters('location'))]",
    "advancedMultiAttackDetectName": "[concat('advancedMultiAttackDetect', '-', parameters('location'))]",
    "log4jVulnerabilityExploitAkaLog4shellIpIocName": "[concat('log4jVulnerabilityExploitAkaLog4shellIpIoc', '-', parameters('location'))]",
    "userAgentSearchForLog4jExploitationAttemptName": "[concat('userAgentSearchForLog4jExploitationAttempt', '-', parameters('location'))]",
    "vulnerableMachinesRelatedToLog4jCve202144228Name": "[concat('vulnerableMachinesRelatedToLog4jCve202144228', '-', parameters('location'))]"
  },
  "resources": [
    {
      "name": "[variables('socHandbookContentPackageName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('azureSentinel'), 'Solutions/SOC%20Handbook/Package/mainTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "workspace-location": {
            "value": "[parameters('location')]"
          },
          "workspace": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('apacheLog4jVulnDetectionPackageName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('azureSentinel'), 'Solutions/Apache%20Log4j%20Vulnerability%20Detection/Package/mainTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "workspace-location": {
            "value": "[parameters('location')]"
          },
          "workspace": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('securityThreatEssentialPackageName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('azureSentinel'), 'Solutions/SecurityThreatEssentialSolution/Package/mainTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "workspace-location": {
            "value": "[parameters('location')]"
          },
          "workspace": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('analyticsEfficiencyWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/workbooks/analytics-efficiency.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'analytics efficiency workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('anomaliesVisualizationWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/workbooks/anomalies-visualization.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'anomalies visualization workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('archivingBasicLogsRetentionWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/workbooks/archiving-basic-logs-and-retention.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'archiving basic logs retention workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('incidentOverviewWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/workbooks/incident-overview.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'incident overview workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('microsoftSentinelCostWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/workbooks/microsoft-sentinel-cost.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'microsoft sentinel cost workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('securityAlertsWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/workbooks/security-alerts.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'security alerts workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('advancedMultiAttackDetectName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/rules/advanced-multistage-attack-detection.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('log4jVulnerabilityExploitAkaLog4shellIpIocName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/rules/log4j-vulnerability-exploit-aka-log4shell-ip-ioc.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('userAgentSearchForLog4jExploitationAttemptName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/rules/user-agent-search-for-log4j-exploitation-attempt.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('vulnerableMachinesRelatedToLog4jCve202144228Name')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/recommended/basics/rules/vulnerable-machines-related-to-log4j-cve-2021-44228.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    }
  ]
}