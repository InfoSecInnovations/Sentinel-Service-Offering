{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "exchangeState": {
      "type": "string",
      "defaultValue": "enabled",
      "allowedValues": [
        "disabled",
        "enabled"
      ]
    },
    "sharepointState": {
      "type": "string",
      "defaultValue": "enabled",
      "allowedValues": [
        "disabled",
        "enabled"
      ]
    },
    "teamsState": {
      "type": "string",
      "defaultValue": "enabled",
      "allowedValues": [
        "disabled",
        "enabled"
      ]
    },
    "workspaceName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "guidSeed": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "This value is used to generate unique identifiers for the resources that need them, don't modify this!"
      }
    },
    "repoName": {
      "type": "string",
      "defaultValue": "InfoSecInnovations/Sentinel-Service-Offering",
      "metadata": {
        "description": "GitHub repository containing the ARM templates Organization/Repo-Name."
      }
    },
    "repoBranch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "Git branch containing the ARM templates."
      }
    }
  },
  "variables": {
    "artifactsAzureSentinel2Go": "https://raw.githubusercontent.com/InfoSecInnovations/Microsoft-Sentinel2Go/master/",
    "isiSentinel": "[concat('https://raw.githubusercontent.com/', parameters('repoName'), '/', parameters('repoBranch'), '/')]",
    "azureSentinel": "https://raw.githubusercontent.com/Azure/Azure-Sentinel/master/",
    "tenantId": "[subscription().tenantId]",
    "microsoft365ContentPackageName": "[concat('microsoft365ContentPackage', '-', parameters('location'))]",
    "office365DataConnectorName": "[concat('office365DataConnector', '-', parameters('location'))]",
    "office365WorkbookName": "[concat('office365Workbook', '-', parameters('location'))]",
    "exchangeWorkbookName": "[concat('exchangeWorkbook', '-', parameters('location'))]",
    "accessedFilesSharedByTemporaryExternalUserName": "[concat('accessedFilesSharedByTemporaryExternalUs', '-', parameters('location'))]",
    "forestBlizzardCredHarvestingName": "[concat('forestBlizzardCredHarvesting', '-', parameters('location'))]",
    "maliciousInboxRuleName": "[concat('maliciousInboxRule', '-', parameters('location'))]",
    "officeMailForwardingRuleName": "[concat('officeMailForwardingRule', '-', parameters('location'))]",
    "officePolicyTamperingName": "[concat('officePolicyTampering', '-', parameters('location'))]",
    "officeUploadedExecutablesName": "[concat('officeUploadedExecutables', '-', parameters('location'))]",
    "rareOfficeOperationsName": "[concat('rareOfficeOperations', '-', parameters('location'))]",
    "sharepointDownloadsByNewIpName": "[concat('sharepointDownloadsByNewIp', '-', parameters('location'))]",
    "sharepointDownloadsByNewUserAgentName": "[concat('sharepointDownloadsByNewUserAgent', '-', parameters('location'))]",
    "exchangeAuditlogDisabledName": "[concat('exchangeAuditlogDisabled', '-', parameters('location'))]",
    "multipleUsersEmailForwardedToSameDestinationName": "[concat('multipleUsersEmailForwardedToSameDestina', '-', parameters('location'))]",
    "threatEssentialsMailRedirectViaExoTransportRuleName": "[concat('threatEssentialsMailRedirectViaExoTransp', '-', parameters('location'))]"
  },
  "resources": [
    {
      "name": "[variables('microsoft365ContentPackageName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('azureSentinel'), 'Solutions/Microsoft%20365/Package/mainTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "workspace-location": {
            "value": "[parameters('location')]"
          },
          "workspace": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('office365DataConnectorName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('artifactsAzureSentinel2Go'), 'microsoft-sentinel/linkedtemplates/data-connectors/office365.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "exchangeState": {
            "value": "[parameters('exchangeState')]"
          },
          "sharePointState": {
            "value": "[parameters('sharePointState')]"
          },
          "teamsState": {
            "value": "[parameters('teamsState')]"
          },
          "tenantId": {
            "value": "[variables('tenantId')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "name": "[variables('office365WorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/workbooks/office-365.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'office 365 workbook')]"
          }
        }
      }
    },
    {
      "condition": "[equals(parameters('exchangeState'), 'enabled')]",
      "name": "[variables('exchangeWorkbookName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/workbooks/exchange-online.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workbookId": {
            "value": "[guid(parameters('guidSeed'), 'exchange online workbook')]"
          }
        }
      }
    },
    {
      "name": "[variables('accessedFilesSharedByTemporaryExternalUserName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/accessed-files-shared-by-temporary-external-user.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('forestBlizzardCredHarvestingName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/forest-blizzard-cred-harvesting.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('maliciousInboxRuleName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/malicious-inbox-rule.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('officeMailForwardingRuleName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/office-mail-forwarding.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('officePolicyTamperingName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/office-policy-tampering.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('officeUploadedExecutablesName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/office-uploaded-executables.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('rareOfficeOperationsName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/rare-office-operations.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('sharepointDownloadsByNewIpName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/sharepoint-downloads-by-new-ip.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('sharepointDownloadsByNewUserAgentName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/sharepoint-downloads-by-new-user-agent.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('exchangeAuditlogDisabledName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/exchange-auditlog-disabled.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('multipleUsersEmailForwardedToSameDestinationName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/multiple-users-email-forwarded-to-same-destination.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    },
    {
      "name": "[variables('threatEssentialsMailRedirectViaExoTransportRuleName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'), 'arm-templates/packs/microsoft-365/rules/threat-essentials-mail-redirect-via-exo-transport-rule.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    }
  ]
}
