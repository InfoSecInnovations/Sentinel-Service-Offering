{
  "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
  "view": {
      "kind": "Form",
      "properties": {
          "title": "Test Form View",
          "steps": [
              {
                  "name": "basics",
                  "label": "Basics",
                  "elements": [
                      {
                          "name": "resourceScope",
                          "type": "Microsoft.Common.ResourceScope",
                          "location": {
                              "resourceTypes": [
                                  "microsoft.resources/resourcegroups"
                              ]
                          }
                      },
                      {
                          "name": "workspaceName",
                          "type": "Microsoft.Common.TextBox",
                          "label": "Workspace Name",
                          "subLabel": "",
                          "defaultValue": "LAW-ISI-Default",
                          "toolTip": "Name for the Log Analytics workspace used to aggregate data",
                          "constraints": {
                              "required": false,
                              "regex": "",
                              "validationMessage": "",
                              "validations": []
                          },
                          "infoMessages": [],
                          "visible": true
                      },
                      {
                          "name": "pricingTier",
                          "type": "Microsoft.Common.DropDown",
                          "label": "Pricing Tier",
                          "subLabel": "",
                          "defaultValue": "PerGB2018",
                          "toolTip": "Pricing tier: pergb2018 or legacy tiers (Free, Standalone, PerNode, Standard or Premium) which are not available to all customers.",
                          "constraints": {
                              "required": false,
                              "allowedValues": [
                                  {
                                      "label": "PerGB2018",
                                      "value": "PerGB2018"
                                  },
                                  {
                                      "label": "Free",
                                      "value": "Free"
                                  },
                                  {
                                      "label": "Standalone",
                                      "value": "Standalone"
                                  },
                                  {
                                      "label": "PerNode",
                                      "value": "PerNode"
                                  },
                                  {
                                      "label": "Standard",
                                      "value": "Standard"
                                  },
                                  {
                                      "label": "Premium",
                                      "value": "Premium"
                                  }
                              ],
                              "validations": []
                          },
                          "infoMessages": [],
                          "visible": true
                      },
                      {
                          "name": "dataRetention",
                          "type": "Microsoft.Common.TextBox",
                          "label": "Data Retention",
                          "subLabel": "",
                          "defaultValue": "30",
                          "toolTip": "Number of days of retention. Workspaces in the legacy Free pricing tier can only have 7 days.",
                          "constraints": {
                              "required": false,
                              "regex": "",
                              "validationMessage": "",
                              "validations": [
                                  {
                                      "isValid": "[or(or(empty(steps('basics').dataRetention),and(not(startsWith(steps('basics').dataRetention,'[[')),startsWith(steps('basics').dataRetention,'['),endsWith(steps('basics').dataRetention,']'),greater(indexOf(steps('basics').dataRetention,'('),-1),greater(indexOf(steps('basics').dataRetention,')'),-1))),greaterOrEquals(if(regex(steps('basics').dataRetention,'[a-zA-Z]+'),6,steps('basics').dataRetention),7))]",
                                      "message": "The value must be at least 7."
                                  },
                                  {
                                      "isValid": "[or(or(empty(steps('basics').dataRetention),and(not(startsWith(steps('basics').dataRetention,'[[')),startsWith(steps('basics').dataRetention,'['),endsWith(steps('basics').dataRetention,']'),greater(indexOf(steps('basics').dataRetention,'('),-1),greater(indexOf(steps('basics').dataRetention,')'),-1))),lessOrEquals(if(regex(steps('basics').dataRetention,'[a-zA-Z]+'),731,steps('basics').dataRetention),730))]",
                                      "message": "The value must be at most 730."
                                  }
                              ]
                          },
                          "infoMessages": [],
                          "visible": true
                      },
                      {
                          "name": "immediatePurgeDataOn30Days",
                          "type": "Microsoft.Common.DropDown",
                          "label": "Immediate Purge Data On30Days",
                          "subLabel": "",
                          "defaultValue": "true",
                          "toolTip": "If set to true when changing retention to 30 days, older data will be immediately deleted. Use this with extreme caution. This only applies when retention is being set to 30 days.",
                          "constraints": {
                              "required": false,
                              "allowedValues": [
                                  {
                                      "label": "true",
                                      "value": true
                                  },
                                  {
                                      "label": "false",
                                      "value": false
                                  }
                              ],
                              "validations": []
                          },
                          "infoMessages": [],
                          "visible": true
                      },
                      {
                          "name": "enableOffice365",
                          "type": "Microsoft.Common.DropDown",
                          "label": "Enable Office365",
                          "subLabel": "",
                          "defaultValue": "false",
                          "toolTip": "You should enable this if you use Office 365 to get the appropriate logs and workspaces.",
                          "constraints": {
                              "required": false,
                              "allowedValues": [
                                  {
                                      "label": "true",
                                      "value": true
                                  },
                                  {
                                      "label": "false",
                                      "value": false
                                  }
                              ],
                              "validations": []
                          },
                          "infoMessages": [],
                          "visible": true
                      },
                      {
                          "name": "exchangeState",
                          "type": "Microsoft.Common.TextBox",
                          "label": "Exchange State",
                          "subLabel": "",
                          "defaultValue": "test",
                          "toolTip": "",
                          "constraints": {
                              "required": false,
                              "regex": "",
                              "validationMessage": "",
                              "validations": []
                          },
                          "infoMessages": [],
                          "visible": true
                      },
                      {
                          "name": "sharepointState",
                          "type": "Microsoft.Common.TextBox",
                          "label": "Sharepoint State",
                          "subLabel": "",
                          "defaultValue": "test",
                          "toolTip": "",
                          "constraints": {
                              "required": false,
                              "regex": "",
                              "validationMessage": "",
                              "validations": []
                          },
                          "infoMessages": [],
                          "visible": true
                      },
                      {
                          "name": "teamsState",
                          "type": "Microsoft.Common.TextBox",
                          "label": "Teams State",
                          "subLabel": "",
                          "defaultValue": "test",
                          "toolTip": "",
                          "constraints": {
                              "required": false,
                              "regex": "",
                              "validationMessage": "",
                              "validations": []
                          },
                          "infoMessages": [],
                          "visible": true
                      },
                      {
                          "name": "securityCollectionTier",
                          "type": "Microsoft.Common.DropDown",
                          "label": "Security Collection Tier",
                          "subLabel": "",
                          "defaultValue": "Minimal",
                          "toolTip": "Tier for gathering Windows Security Events.",
                          "constraints": {
                              "required": false,
                              "allowedValues": [
                                  {
                                      "label": "All",
                                      "value": "All"
                                  },
                                  {
                                      "label": "Recommended",
                                      "value": "Recommended"
                                  },
                                  {
                                      "label": "Minimal",
                                      "value": "Minimal"
                                  },
                                  {
                                      "label": "None",
                                      "value": "None"
                                  }
                              ],
                              "validations": []
                          },
                          "infoMessages": [],
                          "visible": true
                      },
                      {
                          "name": "location",
                          "type": "Microsoft.Common.TextBox",
                          "label": "Location",
                          "subLabel": "",
                          "defaultValue": "[[resourceGroup().location]",
                          "toolTip": "Location for all resources.",
                          "constraints": {
                              "required": false,
                              "regex": "",
                              "validationMessage": "",
                              "validations": []
                          },
                          "infoMessages": [],
                          "visible": true
                      }
                  ]
              }
          ]
      },
      "outputs": {
          "parameters": {
              "workspaceName": "[steps('basics').workspaceName]",
              "pricingTier": "[steps('basics').pricingTier]",
              "dataRetention": "[steps('basics').dataRetention]",
              "immediatePurgeDataOn30Days": "[steps('basics').immediatePurgeDataOn30Days]",
              "enableOffice365": "[steps('basics').enableOffice365]",
              "exchangeState": "[steps('basics').exchangeState]",
              "sharepointState": "[steps('basics').sharepointState]",
              "teamsState": "[steps('basics').teamsState]",
              "securityCollectionTier": "[steps('basics').securityCollectionTier]",
              "location": "[steps('basics').location]"
          },
          "kind": "ResourceGroup",
          "location": "[steps('basics').resourceScope.location.name]",
          "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
      }
  }
}