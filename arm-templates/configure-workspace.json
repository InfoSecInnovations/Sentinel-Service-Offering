{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "string",
      "defaultValue": "LAW-ISI-SentinelServiceOffering",
      "metadata": {
        "description": "Name for the Log Analytics workspace used to aggregate data. You should make sure to use a name that doesn't already exist."
      }
    },
    "pricingTier": {
      "type": "string",
      "allowedValues": [
        "PerGB2018",
        "Free",
        "Standalone",
        "PerNode",
        "Standard",
        "Premium"
      ],
      "defaultValue": "PerGB2018",
      "metadata": {
        "description": "Pricing tier: pergb2018 or legacy tiers (Free, Standalone, PerNode, Standard or Premium) which are not available to all customers."
      }
    },
    "dataRetention": {
      "type": "int",
      "defaultValue": 30,
      "minValue": 7,
      "maxValue": 730,
      "metadata": {
        "description": "Number of days of retention. Workspaces in the legacy Free pricing tier can only have 7 days."
      }
    },
    "immediatePurgeDataOn30Days": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "If set to true when changing retention to 30 days, older data will be immediately deleted. Use this with extreme caution. This only applies when retention is being set to 30 days."
      }
    },
    "enableBasicsPack": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Install some general items we recommend. Keep this enabled unless you're enabling the content through some other means."
      }
    },
    "enableAzureActivityPack": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Install items relating to Azure Activity logs. Keep this enabled unless you're enabling the content through some other means."
      }
    },
    "enableUEBAPack": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable UEBA Logs and related content. Keep this enabled unless you're enabling the content through some other means."
      }
    },
    "enableSecurityEventsPack": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Install items relating to Security Event logs. Keep this enabled unless you're enabling the content through some other means."
      }
    },
    "securityCollectionTier": {
      "type": "string",
      "metadata": {
        "description": "Tier for gathering Windows Security Events. These match the defaults for Data Collection Rules."
      },
      "allowedValues": [
        "Minimum",
        "Common",
        "All"
      ],
      "defaultValue": "Common"
    },
    "arcServers": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "JSON formatted array of the names of any existing Arc servers you wish to add to Security Events log gathering. We also have tools to automate this process after setting up the Sentinel instance."
      }
    },
    "enableMicrosoft365Pack": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "You should enable this if you use Microsoft 365."
      }
    },
    "exchangeState": {
      "type": "string",
      "defaultValue": "disabled",
      "allowedValues": [
        "disabled",
        "enabled"
      ],
      "metadata": {
        "description": "Track logs from Exchange, only relevant if Microsoft 365 is enabled above."
      }
    },
    "sharepointState": {
      "type": "string",
      "defaultValue": "disabled",
      "allowedValues": [
        "disabled",
        "enabled"
      ],
      "metadata": {
        "description": "Track logs from SharePoint, only relevant if Microsoft 365 is enabled above."
      }
    },
    "teamsState": {
      "type": "string",
      "defaultValue": "disabled",
      "allowedValues": [
        "disabled",
        "enabled"
      ],
      "metadata": {
        "description": "Track logs from Teams, only relevant if Microsoft 365 is enabled above."
      }
    },
    "enableMicrosoftEntraIDPack": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "You should enable this if you use Microsoft Entra ID."
      }
    },
    "enableMicrosoftEntraIDConnector": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "See the project README for more information about the Microsoft Entra ID Data Connector. You will likely need to keep this toggled off and enable it through the web portal."
      }
    },
    "guidSeed": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "This value is used to generate unique identifiers for the resources that need them, don't modify this!"
      }
    },
    "repoName": {
      "type": "string",
      "defaultValue": "InfoSecInnovations/Sentinel-Service-Offering",
      "metadata": {
        "description": "GitHub repository containing the ARM templates Organization/Repo-Name."
      }
    },
    "repoBranch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "Git branch containing the ARM templates."
      }
    }
  },
  "variables": {
    "isiSentinel": "[concat('https://raw.githubusercontent.com/', parameters('repoName'), '/', parameters('repoBranch'), '/')]",
    "artifactsAzureSentinel2Go": "https://raw.githubusercontent.com/InfoSecInnovations/Microsoft-Sentinel2Go/master/",
    "location": "[resourceGroup().location]",
    "deployAzureSentinelName": "[concat('deployAzureSentinel', '-', variables('location'))]",
    "azureActivityRequirementsName": "[concat('azureActivityRequirements', '-', variables('location'))]",
    "azureActivityDataConnectorsName": "[concat('azureActivityDataConnectors', '-', variables('location'))]",
    "uebaDataConnectorsName": "[concat('uebaDataConnectors', '-', variables('location'))]",
    "basicsRequirementsName": "[concat('basicsRequirements', '-', variables('location'))]",
    "securityEventsRequirementsName": "[concat('securityEventsRequirements', '-', variables('location'))]",
    "securityEventsDataConnectorsName": "[concat('securityEventsDataConnectors', '-', variables('location'))]"
  },
  "resources": [
    {
      "name": "[variables('deployAzureSentinelName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'),'arm-templates/deploy-sentinel.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "pricingTier": {
            "value": "[parameters('pricingTier')]"
          },
          "dataRetention": {
            "value": "[parameters('dataRetention')]"
          },
          "immediatePurgeDataOn30Days": {
            "value": "[parameters('immediatePurgeDataOn30Days')]"
          },
          "location": {
            "value": "[variables('location')]"
          }
        }
      }
    },
    {
      "name": "[variables('azureActivityRequirementsName')]",
      "condition": "[parameters('enableAzureActivityPack')]",
      "dependsOn": [
        "[variables('deployAzureSentinelName')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'),'arm-templates/packs/azure-activity/requirements.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[variables('location')]"
          },
          "repoName": {
            "value": "[parameters('repoName')]"
          },
          "repoBranch": {
            "value": "[parameters('repoBranch')]"
          }
        }
      }
    },
    {
      "name": "[variables('azureActivityDataConnectorsName')]",
      "condition": "[parameters('enableAzureActivityPack')]",
      "dependsOn": [
        "[variables('deployAzureSentinelName')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'),'arm-templates/packs/azure-activity/data-connectors.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[variables('location')]"
          },
          "repoName": {
            "value": "[parameters('repoName')]"
          },
          "repoBranch": {
            "value": "[parameters('repoBranch')]"
          }
        }
      }
    },
    {
      "name": "[variables('uebaDataConnectorsName')]",
      "condition": "[parameters('enableUEBAPack')]",
      "dependsOn": [
        "[variables('deployAzureSentinelName')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'),'arm-templates/packs/ueba/data-connectors.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[variables('location')]"
          },
          "repoName": {
            "value": "[parameters('repoName')]"
          },
          "repoBranch": {
            "value": "[parameters('repoBranch')]"
          }
        }
      }
    },
    {
      "name": "[variables('basicsRequirementsName')]",
      "condition": "[parameters('enableBasicsPack')]",
      "dependsOn": [
        "[variables('deployAzureSentinelName')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'),'arm-templates/packs/basics/requirements.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[variables('location')]"
          },
          "repoName": {
            "value": "[parameters('repoName')]"
          },
          "repoBranch": {
            "value": "[parameters('repoBranch')]"
          }
        }
      }
    },
    {
      "name": "[variables('securityEventsRequirementsName')]",
      "condition": "[parameters('enableSecurityEventsPack')]",
      "dependsOn": [
        "[variables('deployAzureSentinelName')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'),'arm-templates/packs/security-events/requirements.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "location": {
            "value": "[variables('location')]"
          },
          "repoName": {
            "value": "[parameters('repoName')]"
          },
          "repoBranch": {
            "value": "[parameters('repoBranch')]"
          }
        }
      }
    },
    {
      "name": "[variables('securityEventsDataConnectorsName')]",
      "condition": "[parameters('enableSecurityEventsPack')]",
      "dependsOn": [
        "[variables('deployAzureSentinelName')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('isiSentinel'),'arm-templates/packs/security-events/data-connectors.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[reference(variables('deployAzureSentinelName'), '2022-09-01').outputs.workspaceNameOutput.value]"
          },
          "workspaceId": {
            "value": "[reference(variables('deployAzureSentinelName'), '2022-09-01').outputs.workspaceIdOutput.value]"
          },
          "location": {
            "value": "[variables('location')]"
          },
          "securityCollectionTier": {
            "value": "[parameters('securityCollectionTier')]"
          },
          "arcServers": {
            "value": "[parameters('arcServers')]"
          },
          "repoName": {
            "value": "[parameters('repoName')]"
          },
          "repoBranch": {
            "value": "[parameters('repoBranch')]"
          }
        }
      }
    }
  ]
}
